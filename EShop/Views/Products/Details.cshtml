@model EShop.Models.ProductDetailViewModel
@{
    ViewBag.Title = "Product Details";
}
<h2>@ViewBag.Title</h2>
<hr/>

<div class="row">
    <div class="col-md-3">
        <img src="~/Content/box_placeholder.png" width="240" height="300" alt="Image"/>
    </div>
    <div class="col-md-4">
        <h3>@Html.DisplayFor(model => model.Name)</h3>
        <h4>@Html.DisplayFor(model => model.Price)</h4>

        <h6><span class="stock">@Html.DisplayFor(model => model.Stock)</span> left in stock</h6>

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Weight):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Weight)g
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.BoxItemsAmount):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.BoxItemsAmount) / per Box
            </dd>
        </dl>
    </div>

    @using (Html.BeginForm("Details", "Products", FormMethod.Post, new {role = "form"}))
    {
        @Html.AntiForgeryToken()
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-12">
                    <h3>@Html.DisplayNameFor(m => m.Quantity)</h3>
                </div>
                <div class="col-md-10">
                    @Html.Partial("_ValidationSummary")
                </div>
                <div class="form-group col-md-12">
                    @Html.TextBoxFor(m => m.Quantity, new {@class = "col-md-2 col-sm-2 col-xs-12 form-control"})
                    @Html.HiddenFor(m => m.ProductId)
                    <input type="submit" class="btn btn-success col-md-10 col-sm-3 col-xs-12" value="Add to Basket"/>
                </div>
            </div>
        </div>
    }
</div>

<br/>

<p>
    @Html.ActionLink("All Products", "Index")
</p>